<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.alfredAI.controller.QuizController"
            stylesheets="@style.css">
    <VBox spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Button text="Back to Quest" onAction="#onBack"/>
        <Label text="Daily Quiz" maxWidth="700" alignment="CENTER"/>
        <HBox>
            <ImageView fx:id="questCharacter" fitWidth="100" fitHeight="125" preserveRatio="true"/>
            <ProgressBar fx:id="progressBar" prefWidth="550"/>
            <ImageView fx:id="questVillan" fitWidth="100" fitHeight="125" preserveRatio="true"/>
        </HBox>


        <VBox spacing="10.0" prefWidth="700" fx:id="questionsContainer"/>

        <HBox maxWidth="700" alignment="CENTER_RIGHT">
            <Button text="Submit" onAction="#onSubmit"/>
        </HBox>

    </VBox>
</ScrollPane>