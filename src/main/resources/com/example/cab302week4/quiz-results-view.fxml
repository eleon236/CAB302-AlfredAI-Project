<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>

<?import javafx.scene.layout.HBox?>
<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cab302week4.controller.QuizResultsController"
            stylesheets="@style.css">
    <VBox spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <HBox maxWidth="580" alignment="CENTER_RIGHT">
            <Button text="Continue" onAction="#onContinue"/>
        </HBox>
        <Label text="Daily Quiz" maxWidth="580" alignment="CENTER"/>
        <Label text="Results" maxWidth="580" alignment="CENTER"/>

        <Label fx:id="resultsLabel" maxWidth="580" alignment="CENTER"/>
        <VBox spacing="10.0" prefWidth="580" fx:id="questionsContainer"/>

    </VBox>
</ScrollPane>