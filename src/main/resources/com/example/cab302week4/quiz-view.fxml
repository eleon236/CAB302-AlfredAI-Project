<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cab302week4.controller.QuizController">
    <VBox alignment="TOP_LEFT" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Button text="Back to Contacts" onAction="#onBack"/>
        <Label text="Daily Quiz" alignment="CENTER"/>
        <ProgressBar fx:id="progressBar"/>

        <VBox spacing="10.0" prefWidth="600" fx:id="questionsContainer"/>

        <Button text="Submit" onAction="#onSubmit"/>

    </VBox>
</ScrollPane>