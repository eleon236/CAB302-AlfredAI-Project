<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cab302week4.controller.flashcardController"
      alignment="CENTER" spacing="20"
      stylesheets="@style.css"
      style="-fx-padding: 40; -fx-background-color: #f0f0f0;">

    <!-- Flashcard display inside a styled StackPane -->
    <StackPane styleClass="flashcard-box">
        <Label fx:id="cardLabel" wrapText="true" maxWidth="260" styleClass="flashcard-text"/>
    </StackPane>

    <!-- Navigation buttons -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Next" onAction="#onNext"/>
        <Button text="Flip" onAction="#onFlip"/>
    </HBox>

    <Button text="Back to Contacts" onAction="#onBack"/>
</VBox>
